# ASF properties
USE_ASF = 1
ASF_IOPORT_DRIVER = 1
ASF_USART_DRIVER = 1
ASF_USART_SERVICE = 1

# Stack properties
USE_WIRELESS = 1
USE_WIRELESS_OLD = 1
STACK_TYPE = LwMesh
STACK_VERSION = TDMA
USE_SIO_MANAGER = 1
SIO2HOST_CHANNEL = SIO_SERIAL

# Build specific properties
TAL_TYPE = atmegarfa1
BOARD_TYPE = WM100_DUINO
MCU = atmega128rfa1
PLATFORM = mega_rf
F_CPU = 16000000
CFLAGS += -DHAL_ATMEGA128RFA1
CFLAGS += -DPLATFORM_WM100_DUINO
CFLAGS += -DEXT_RF_FRONT_END_CTRL
CFLAGS += -DANTENNA_DEFAULT=2
CFLAGS += -DPHY_ENABLE_RANDOM_NUMBER_GENERATOR
CFLAGS += -DHAL_UART_CHANNEL=0
CFLAGS += -DAPP_ADDR=$(ADDR)

EXP ?= exp2
ADDR ?= 0x0001

## General Flags
PROJECT = $(EXP)_m128rfa1_wm100duino_$(ADDR)
FORMAT = ihex

# Target Flags
TARGET_DIR = .
TARGET = $(PROJECT)

# Path variables
## Path to main project directory
ROOT_DIR = ../../..


ifneq (,$(filter $(EXP),BASIC))
CSRC	+= ServerBASIC.c
CSRC	+= Solver.c
CSRC	+= Energy.c
endif
ifneq (,$(filter $(EXP),TDMA))
CSRC	+= ServerTDMA.c
CSRC	+= Solver.c
CSRC	+= Energy.c
endif
ifneq (,$(filter $(EXP),TDMARed))
CSRC	+= ServerTDMARedundante.c
CSRC	+= Solver.c
CSRC	+= Energy.c
endif

ifneq (,$(filter $(EXP),LLDN))
CSRC	+= ServerLLDN.c
endif

# List any extra directories to look for include files here.
#     Each directory must be seperated by a space.
EXTRAINCDIRS +=																	\
	config																		\
	drivers

include																			\
	$(ROOT_DIR)/platform/$(PLATFORM)/platform.mk